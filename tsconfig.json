{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true, // Needed for scripts
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["scripts", "src", "test/node"],
  "exclude": ["node_modules", "dist"]
}
